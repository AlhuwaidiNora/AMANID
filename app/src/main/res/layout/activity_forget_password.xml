<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/mMainLayout2"
    tools:context=".Forget_password">

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="383dp"
        android:layout_height="378dp"
        android:layout_marginBottom="100dp"
        app:layout_constraintBottom_toTopOf="@+id/forgetpassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/pasted_graphic_27" />

    <Button
        android:id="@+id/button137"
        android:layout_width="45dp"
        android:layout_height="57dp"
        android:layout_marginTop="24dp"
        android:background="#001937FD"
        android:backgroundTint="#1937FD"
        app:icon="?attr/actionModeCloseDrawable"
        app:layout_constraintBottom_toTopOf="@+id/textView23"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.101"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.47" />

    <Button
        android:id="@+id/confirmButton"
        android:layout_width="231dp"
        android:layout_height="56dp"
        android:layout_marginBottom="112dp"
        android:background="@drawable/custom_button"
        android:text=" send"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.433"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/forgetpassword"
        android:layout_width="317dp"
        android:layout_height="40dp"
        android:layout_marginBottom="356dp"
        android:background="@drawable/edit_text"
        android:drawableLeft="@drawable/baseline_perm_identity_24"
        android:ems="10"
        android:hint="Enter your ID"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.542"
        app:layout_constraintStart_toStartOf="parent" />

    <Spinner
        android:id="@+id/hint_questions_spinner"
        android:layout_width="321dp"
        android:layout_height="39dp"
        android:layout_marginBottom="16dp"
        android:entries="@array/hint_questions"
        app:layout_constraintBottom_toTopOf="@+id/hintanswer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent">

    </Spinner>

    <EditText
        android:id="@+id/hintanswer"
        android:layout_width="317dp"
        android:layout_height="40dp"
        android:layout_marginBottom="216dp"
        android:background="@drawable/edit_text"
        android:drawableLeft="@drawable/baseline_question_mark_24"
        android:ems="10"
        android:hint="Enter your hint answer"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView23"
        android:layout_width="253dp"
        android:layout_height="141dp"
        android:layout_marginTop="64dp"
        android:text="Do you want to remember your password?"
        android:textColor="#ffff"
        android:textSize="32sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.516"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>